{
  "name": "task-builder",
  "version": "0.9.0",
  "description": "Simple task building system",
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "clear": "rimraf types docs lib",
    "prepublishOnly": "run-s clear build-code docs",
    "build-code": "tsc",
    "build-code:watch": "tsc -w",
    "lint:check": "eslint --ext .ts ./src ./test",
    "lint:fix": "eslint --fix --ext .ts ./src ./test",
    "format:check": "prettier --check ./src ./test",
    "format:fix": "prettier --write ./src ./test",
    "format+lint:check": "npm run format:check && npm run lint:check",
    "format+lint:fix": "npm run format:fix && npm run lint:fix",
    "docs": "typedoc src/index.ts",
    "test": "ts-mocha -p ./tsconfig.json ./test/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/protoukr/task-builder"
  },
  "files": [
    "lib",
    "types"
  ],
  "keywords": [
    "typescript",
    "task",
    "builder",
    "flow",
    "job",
    "queue",
    "async",
    "promise",
    "callback"
  ],
  "author": "Roman Pukhalskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/protoukr/task-builder/issues"
  },
  "homepage": "https://github.com/protoukr/task-builder",
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^8.2.3",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "^4.3.6",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "mocha": "^8.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.8.1",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.3"
  }
}
